package com.spring.standard.events.demo.eventlisteners.standardeventlisteners;

import org.springframework.context.ApplicationListener;
import org.springframework.context.event.ContextStartedEvent;

public class ContextStoppedEventListener implements ApplicationListener<ContextEventStopped>{

	@Override
	public void onApplicationEvent(ContextEventStopped stop) {
		System.out.println("Application refreshed.");
		
	}
	

}
